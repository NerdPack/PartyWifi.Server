@{
    ViewBag.Title = "Slideshow";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/slideshow.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/slideshow.min.css" />
    </environment>
</head>
<body>
    <div id="container">
        <img id="image" alt="SlideshowImage"/>
    </div>

    <environment names="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/js/slideshow.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        
        <script src="~/js/slideshow.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>